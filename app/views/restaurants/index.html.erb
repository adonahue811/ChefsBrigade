<p id="notice"><%= notice %></p>
<head>
  <%= stylesheet_link_tag "application.css" %> </head>
<h1>Restaurants</h1>

  <<table>
  <thead>
    <tr>
      <th>R</th>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.r_id %></td>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone %></td>
        <td><%= restaurant.email %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  </table> 
  <% i = 0%>
  <% @restaurants.each do |restaurant| %>
    <% if i%3==0 %>
    <div class="card-deck">
    <% end %>
  <div class="card" style="width: 18rem;">
  <img class="card-img-top" src="<%= restaurant.picture_link %>" alt="Card image cap">
  <div class="card-body">
    <h4 class="card-title"><%= restaurant.name %></h4>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Address: <b><%= restaurant.address %></b></li>
    <li class="list-group-item">Phone:  <b><%= restaurant.phone %></b></li>
    <li class="list-group-item">Email:  <b><%= restaurant.email %></b></li>
  </ul>
  <div class="card-body">
    <p class="card-text"><%= restaurant.description %></b></p>
    <a href="#" class="btn btn-primary">Submit form for this restaurant</a>
</div>
</div>
    <% if i%3==2 %>
      </div>
    <% end %>
      <% i += 1 %>
<% end %>



<br>

<p><%= link_to 'New Restaurant', new_restaurant_path %></p>
